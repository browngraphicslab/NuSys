<UserControl x:Class="WordAddIn.SelectionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordAddIn"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             MouseLeftButtonUp="StackPanel_MouseLeftButtonUp">
    <Grid>
        
        <StackPanel Orientation="Vertical" RenderTransform="{Binding RenderTransform}" Background="#e3e3e3" Margin="15,15,15,15">
            <StackPanel Orientation="Horizontal">
                <Label FontSize="14 " FontFamily="Segoe UI Light">On slide</Label>
                <Label FontSize="14 " FontFamily="Segoe UI Light" Content="{Binding SlideNumber}" />
            </StackPanel>
            <RichTextBox x:Name="rtb" Width="280" MaxHeight="200" IsHitTestVisible="False" />
        </StackPanel>
        <Separator VerticalAlignment="Bottom" Height="1"/>
    </Grid>
</UserControl>
