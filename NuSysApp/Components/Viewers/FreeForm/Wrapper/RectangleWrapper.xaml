<UserControl
    x:Class="NuSysApp.RectangleWrapper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="xClippingGrid" SizeChanged="XClippingGrid_OnSizeChanged">
        
        <ContentPresenter x:Name="xClippingContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SizeChanged="xClippingContent_SizeChanged">
            <ContentPresenter.RenderTransform>
                <CompositeTransform x:Name="xClippingCompositeTransform"/>
            </ContentPresenter.RenderTransform>
            <ContentPresenter.Clip>
                <RectangleGeometry x:Name="xClippingRectangle">
                    
                </RectangleGeometry>
            </ContentPresenter.Clip>
        </ContentPresenter>
    </Grid>
</UserControl>
