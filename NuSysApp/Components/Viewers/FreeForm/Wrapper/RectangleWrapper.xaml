<UserControl
    x:Class="NuSysApp.RectangleWrapper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="xClippingGrid" SizeChanged="XClippingGrid_OnSizeChanged"  VerticalAlignment="Center" HorizontalAlignment="Center"  >
        <Grid.RenderTransform>
            <CompositeTransform x:Name="WrapperTransform"/>
        </Grid.RenderTransform>
        <Grid.Clip>
            <RectangleGeometry x:Name="xClippingRectangle">
            </RectangleGeometry>
        </Grid.Clip>
        <ContentPresenter x:Name="xClippingContent"  HorizontalAlignment="Center" VerticalAlignment="Center" PointerPressed="xClippingContent_PointerPressed">
        </ContentPresenter>
        <ItemsControl x:Name="xClippingCanvas">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
