<local:AnimatableUserControl
    x:Class="NuSysApp.GroupNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NuSysApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:foundation="using:Windows.Foundation"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    RenderTransform="{Binding Transform}"
    Opacity="{Binding Alpha}"
    Width="{Binding Width}" Height="{Binding Height}"
    Background="Transparent"
    BorderThickness="2"
    BorderBrush="Black"
   >
    <local:NodeTemplate x:Name="nodeTpl" Background="#dee5e9" Opacity="1">
        <local:NodeTemplate.SubMenu>
            <Button Margin="0,2,0,2" x:Name="Delete" Click="OnDeleteClick" Style="{StaticResource NodeSubMenuItem}" Background="#9cc5c2">
                <Image Source="ms-appx:///Assets/node icons/delete.png" Height="25" Width="25" Stretch="Uniform"></Image>
            </Button>
        </local:NodeTemplate.SubMenu>
        <local:NodeTemplate.Inner>

    <Canvas x:Name="GroupNodeCanvas" Height="{Binding Height}" Width="{Binding Width}" Background="Transparent">
        <Grid x:Name="xTitleContainer" VerticalAlignment="Top" Width="{Binding Width}" >
            <Border x:Name="Rect" Background="White" BorderBrush="#83A6A3" BorderThickness="1" Width="{Binding Width}"  />
            <!--<TextBox Padding="10,5,10,10" x:Name="xTitle" Foreground="#606d7a" Width="{Binding Width}"  IsHitTestVisible="{Binding IsSelected}" TextWrapping="NoWrap"  Text="{Binding Title, Mode=TwoWay}" MaxHeight="80" FontSize="18" BorderBrush="Transparent" Background="Transparent" TextAlignment="Center" VerticalAlignment="Center" BorderThickness="0"></TextBox>-->
            <Button x:Name="btnDelete" Visibility="Collapsed">X</Button>
        </Grid>
                
       
        <Grid x:Name="ExpandedGrid" Background="Transparent" Width="{Binding Width}" Height="{Binding Height}" IsHitTestVisible="{Binding IsEditing}">
            <StackPanel Orientation="Vertical"  VerticalAlignment="Top" HorizontalAlignment="Right">
                <StackPanel.RenderTransform>
                    <TranslateTransform X="130" Y="140"></TranslateTransform>
                </StackPanel.RenderTransform>
                <TextBlock Text="View as" FontSize="15" FontWeight="Bold" Margin="0,5"></TextBlock>
                <Button x:Name="FreeFormButton" Margin="0,0,10,0" Height="30" Width="100" Content="Free Form" FontSize="15" />
                <Button x:Name="ListButton"  Height="30" Width="100" Content="List" FontSize="15"/>
                <Button x:Name="TimeLineButton" Margin="0,0,10,0" Height="30" Width="100" Content="Timeline" FontSize="15"/>
                <Button x:Name="DefaultButton" Margin="0,0,10,0" Height="30" Width="100" Content="Default" FontSize="15" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <Path x:Name="Resizer" Visibility="Collapsed" Fill="Black" Data="M283,251 L283,283 L251,283 z" HorizontalAlignment="Right"
              Height="59.862" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Bottom" Width="61"
              Opacity=".35"  Canvas.ZIndex="20" ManipulationMode="All" />
    </Canvas>
        </local:NodeTemplate.Inner>

    </local:NodeTemplate>
</local:AnimatableUserControl>
