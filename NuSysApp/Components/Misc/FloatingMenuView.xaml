                        <!--<Canvas Background="Transparent" Width="20" Height="20">
                            <Canvas.RenderTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"></ScaleTransform>
                            </Canvas.RenderTransform>-->
                        <Image Source="/Assets/collection main menu.png" Height="30" Margin="0,5,0,0"></Image>
                        <!--<Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="path4138" Fill="{StaticResource color3}" Data="M 13.341 5.579 C 12.994 5.106 12.51 4.552 11.979 4.021 11.448 3.49 10.894 3.006 10.421 2.659 9.615 2.068 9.224 2 9 2 L 3.25 2 C 2.561 2 2 2.561 2 3.25 l 0 11.5 C 2 15.439 2.561 16 3.25 16 l 9.5 0 C 13.439 16 14 15.439 14 14.75 L 14 7 C 14 6.776 13.932 6.385 13.341 5.579 Z m -2.07 -0.85 c 0.48 0.48 0.856 0.912 1.134 1.271 l -2.406 0 0 -2.405 c 0.359 0.278 0.792 0.654 1.271 1.134 l 0 0 z M 13 14.75 C 13 14.886 12.886 15 12.75 15 l -9.5 0 C 3.114 15 3 14.886 3 14.75 L 3 3.25 C 3 3.115 3.114 3 3.25 3 3.25 3 8.999 3 9 3 L 9 6.5 C 9 6.776 9.224 7 9.5 7 l 3.5 0 0 7.75 z"/>
