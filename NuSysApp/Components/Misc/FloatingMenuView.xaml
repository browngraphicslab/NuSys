                    <Grid x:Name="btnTools" Width="60" Height="60" Margin="10,0,10,0" Background="Transparent">
                        <TextBlock Margin="0,0,0,12" Text="Tools" TextAlignment="Center" FontSize="12" FontFamily="ms-appx:/Assets/fonts/FiraSans-UltraLight.ttf#Fira Sans UltraLight" Foreground="{StaticResource color3}" ></TextBlock>
                        <!--<Canvas Background="Transparent" Width="20" Height="20">
                            <Canvas.RenderTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"></ScaleTransform>
                            </Canvas.RenderTransform>-->

                        <Image Height="30" Margin="0,5,0,0"   Source="ms-appx:///Assets/tools icon.png" ></Image>
                        <!--</Canvas>-->
                    </Grid>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Drag to Create" TextAlignment="Center" FontSize="15" FontFamily="ms-appx:/Assets/fonts/FiraSans-UltraLight.ttf#Fira Sans UltraLight" Foreground="{StaticResource color2}" Margin="0,5,0,0"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Canvas>
        
        <Canvas x:Name="chatCanvas" Visibility="Collapsed">
            <Canvas.RenderTransform>
                <TranslateTransform x:Name="chatCanvasTranform" X="170" Y="70"></TranslateTransform>
            </Canvas.RenderTransform>
            <StackPanel Orientation="Vertical">
                <TextBox x:Name="chatDisplayBox" Height="200" Width="200" IsReadOnly="True"/>
                <TextBox x:Name="chatInputBox" Height="100" Width="200" IsReadOnly="false" TextWrapping="Wrap"/>
            </StackPanel>
        </Canvas>
        
        <StackPanel x:Name="FloatingMenuPanel" Orientation="Horizontal">
            <StackPanel.RenderTransform>
                <CompositeTransform/>
            </StackPanel.RenderTransform>
            <local:FloatingMenuButtonView x:Name="btnAddNode" Icon="ms-appx:///Assets/icon_mainmenu_add_node.png" Caption="" />
            <local:FloatingMenuButtonView x:Name="btnLibrary" Icon="ms-appx:///Assets/icon_library.png" Caption="" />
            <local:FloatingMenuButtonView x:Name="btnPen" Icon="ms-appx:///Assets/node icons/pen.png" Caption="" Visibility="Collapsed"/>
            <local:FloatingMenuButtonView x:Name="btnSearch" Icon="ms-appx:///Assets/node icons/search_icon.png" Caption=""/>
            <local:FloatingMenuButtonView x:Name="btnGlobalChat" Icon="ms-appx:///Assets/node icons/text.png" Caption=""/>
        </StackPanel>
    </Canvas>
</UserControl>