                        <TextBlock  Grid.Column="0"  Text="{Binding Title}" FontSize="16" />
                        <TextBlock  Grid.Column="1"  Text="{Binding NodeType}" FontSize="16"/>
                        <TextBlock Grid.Column="2" Text="{Binding Timestamp}" FontSize="16"/>
                     

