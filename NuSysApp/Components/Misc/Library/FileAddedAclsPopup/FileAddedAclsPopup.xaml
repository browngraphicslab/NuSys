<UserControl
    x:Class="NuSysApp.FileAddedAclsPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nuSysApp="using:NuSysApp"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <nuSysApp:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid" Padding="5" BorderBrush="{StaticResource color2}" BorderThickness="2" Background="White" Width="{Binding Width}" Height="{Binding Height}" 
          Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- The header for the list view -->
        <Grid HorizontalAlignment="Stretch" Margin="0" Padding="5,0,5,0"  Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="{StaticResource color3}"  Text="Select All" VerticalAlignment="Center" Margin="0,0,20,0"></TextBlock>
            <CheckBox Grid.Column="1" Style="{StaticResource NuSysCheckBox}"  Foreground="{StaticResource color3}"  x:Name="publicSelectAll" Margin="5" Content="Public" Checked="SelectAll_OnChecked"/>
            <CheckBox Grid.Column="2" Style="{StaticResource NuSysCheckBox}"  x:Name="privateSelectAll" Margin="5" Content="Private" Checked="SelectAll_OnChecked"/>
        </Grid>
        <!-- ListView Containing file names and acls options -->
            <ListView x:Name="ListView" Grid.Row="1" ItemsSource="{Binding Files}" HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel></StackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            
                <!-- set the style for the list view items -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <!-- The template that determines the ui elements contained in each listViewItem -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding DisplayName}" Foreground="{StaticResource color3}" VerticalAlignment="Center"></TextBlock>
                            <RadioButton Grid.Column="1" Style="{StaticResource NuSysRadioButton}"  x:Name="publicRadio" Margin="5" Content="Public" Checked="Access_OnChecked" IsChecked="True"/>
                            <RadioButton Grid.Column="2" Style="{StaticResource NuSysRadioButton}"  x:Name="privateRadio" Margin="5" Content="Private" Checked="Access_OnChecked"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="xSubmitButton" Style="{StaticResource DarkButton}"  Content="Submit" Tapped="XSubmitButton_OnTapped" HorizontalAlignment="Center"/>
            <Button x:Name="xCancelButton" Style="{StaticResource DarkButton}"  Grid.Column="1" Content="Cancel" Tapped="XCancelButton_OnTapped" HorizontalAlignment="Center"/>
        </Grid>


    </Grid>
</UserControl>
