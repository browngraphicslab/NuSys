<UserControl
    x:Class="NuSysApp.LibraryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NuSysApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="550"
    d:DesignWidth="450">


    <Grid x:Name="Container" Width="450" Height="550">
        <Pivot x:Name="Pivot" Background="#E6EDEC" FontFamily="FiraSans-Book" IsLocked="True" Foreground="#74AFAD" Height="550">

            <PivotItem x:Name="WorkspacePivot" Background="White " Margin="0,8,0,37" Width="450" BorderBrush="#00748b" BorderThickness="5">
                <PivotItem.Header>
                    <Grid>
                        <TextBlock Text="LIBRARY" Foreground="#00748b" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    </Grid>
                </PivotItem.Header>

            </PivotItem>
            <PivotItem x:Name="FilesPivot" Background="#74AFAD " Margin="10,50,10,10">
                <PivotItem.Header>
                    <Grid>
                        <TextBlock Text="Files"/>
                    </Grid>
                </PivotItem.Header>
            </PivotItem>
            <PivotItem x:Name="WebPivot" Background="#74AFAD " Margin="10,50,10,11">
                <PivotItem.Header>
                    <Grid>
                        <TextBlock Text="Web"/>
                    </Grid>
                </PivotItem.Header>
            </PivotItem>
            <PivotItem x:Name="OfficePivot" Background="#74AFAD " Margin="10,50,10,11">
                <PivotItem.Header>
                    <Grid>
                        <TextBlock Text="Office"/>
                    </Grid>
                </PivotItem.Header>
            </PivotItem>
        </Pivot>
        <TextBox x:Name="Searchfield" TextChanging="TextBox_OnTextChanging"  PlaceholderText="SEARCH" FontSize="16" BorderThickness="3" Background="White"  Foreground="White" VerticalAlignment="Center" Height="39" Margin="0,513,-1,-2"></TextBox>

        <Image Source="ms-appx:///Assets/icon_mainmenu_search.png" Margin="416,518,6,0" />
        <Image Tapped="Folder_Tapped" Source ="ms-appx:///Assets/icon_upload.png" Margin="402,11,13,506"></Image>

        <Image x:Name="Graph" Source="ms-appx:///Assets/icon_pano.png" ManipulationMode="TranslateX, TranslateY" PointerPressed="Graph_OnPointerPressed" ManipulationStarted="Graph_OnManipulationStarted" ManipulationDelta="Graph_OnManipulationDelta" ManipulationCompleted="Graph_OnManipulationCompleted" Margin="351,10,60,503"/>

        <!--<ComboBox x:Name="SortBox" SelectionChanged="ComboBox1_OnSelectionChanged" Width="100" PlaceholderText="Sort by..." Margin="330,50,0,0" Foreground="White">
            <x:String>Title</x:String>
            <x:String>Node type</x:String>
            <x:String>Creator</x:String>
        </ComboBox>-->
    </Grid>
</UserControl>
