<UserControl
    x:Class="NuSysApp.LibraryElementPropertiesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NuSysApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="450" Height="550">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="EnterButton" TargetType="Button">
                <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundTransparentBrush}"/>
                <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}"/>
                <Setter Property="Padding" Value="8,4,8,4"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
                <Setter Property="UseSystemFocusVisuals" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="RootGrid" CornerRadius="3" Background="{TemplateBinding Background}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <Storyboard>
                                                <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="ContentPresenter">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value=".75"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource color6}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource color2}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="ContentPresenter">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <PointerDownThemeAnimation Storyboard.TargetName="RootGrid"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource color2}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource color6}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="ContentPresenter">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value=".75"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <ContentPresenter x:Name="ContentPresenter" AutomationProperties.AccessibilityView="Raw" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" Content="{TemplateBinding Content}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Padding="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border x:Name="Border" Height="500" Width="400" Background="{StaticResource color6}" BorderBrush="{StaticResource color3}" BorderThickness="1" Margin="0,0,0,0">

        <Grid Margin="-7,0,3,0">
            <Image Source="ms-appx:///Assets/icon_collapse.png" Tapped="CollapseArrow_OnTapped"  HorizontalAlignment="Right" Width="10" Margin="0,0,10,0"/>

            <!--<Image Source="ms-appx:///Assets/icon_favorite.png" Tapped="Favorites_OnTapped" HorizontalAlignment="Right" Width="70" Margin="0,-210,10,210"> </Image>-->
            <Image x:Name="Favorite" Source="ms-appx:///Assets/icon_unfavorited.png" Tapped="Favorites_OnTapped" Width="100" Height="45" VerticalAlignment="Top" 
                        HorizontalAlignment="Center" Margin="302,22,0,0">
            </Image>
            

            <StackPanel Padding="50" Orientation="Vertical" >
                <Border Height="150" Width="150" BorderThickness="1" Margin="0,-30,0,0" BorderBrush="{StaticResource color1}" Visibility="Collapsed">
                    <Image x:Name="Preview" Height="150" Width="150" />
                </Border>


                <!--<ListView.Header>
                        <Grid VerticalAlignment="Center" Background="#ECECEA ">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="125" />
                                <ColumnDefinition Width="125" />
                            </Grid.ColumnDefinitions>


                            <TextBlock HorizontalAlignment="Center" Grid.Column="0"  Text="Title" FontSize="18" />
                            <TextBlock HorizontalAlignment="Center" Grid.Column="1" Text="Node Type" FontSize="18" />
                            -->
                <!--<TextBlock Grid.Column="2" Text="Timestamp" />-->
                <!--



                        </Grid>
                    </ListView.Header>-->

                <Rectangle Height="30"></Rectangle>
                <Grid x:Name="PropertiesGrid" VerticalAlignment="Center" Padding="0" Margin="0,30,0,0" Background="{StaticResource color6}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                    </Grid.RowDefinitions>


                    <TextBlock VerticalAlignment="Bottom"  Grid.Column="0" Grid.Row="0" Text="Title" FontSize="14" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBox  x:Name="Title" Margin="0,4,0,0"  TextChanged="OnTitleTextChanged" Grid.Column="1" Grid.Row="0" Text="title" FontSize="14" BorderThickness="0" Padding="0"  Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="1" Text="Type" FontSize="14" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock VerticalAlignment="Bottom" x:Name="Type" Grid.Column="1" Grid.Row="1" Text="--" FontSize="14" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="2" Text="ID" FontSize="14" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock VerticalAlignment="Bottom" x:Name="ID" Grid.Column="1" Grid.Row="2" Text="--" FontSize="14" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="3" Text="Creator" FontSize="14" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock VerticalAlignment="Bottom" x:Name="Creator" Grid.Column="1" Grid.Row="3" Text="--" FontSize="14" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="4" Text="Last Edited" FontSize="14" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock VerticalAlignment="Bottom" x:Name="LastEdited" Grid.Column="1" Grid.Row="4" Text="--" FontSize="14" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="5" Text="History" FontSize="14" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock VerticalAlignment="Bottom" x:Name="History" Grid.Column="1" Grid.Row="5" Text="--" FontSize="14" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>

                </Grid>
                <Rectangle Height="30"></Rectangle>
                <TextBlock Text="Aliases" FontSize="14"  Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"></TextBlock>
                <Rectangle Height="20"></Rectangle>
                <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <Grid x:Name="AliasGrid" >
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition ></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                <Button Width="25" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,50,0,0" Foreground="{StaticResource foreground6}" Background="Transparent"
                    Padding="0" Name="deleteButton" Click="Delete_OnClick">
                    <Image Source="ms-appx:///Assets/icon_delete_color.png" Height="25"></Image>
                </Button>
            </StackPanel>
            <Button Name="EnterCollectionButton" Style="{StaticResource EnterButton}" Padding="0" Click="EnterCollection_OnClick" Width="60" Height="20" VerticalAlignment="Top" 
                        HorizontalAlignment="Center" Margin="10,80,10,10" Background="{StaticResource color3}" Foreground="{StaticResource color1}" FontFamily="ms-appx:/Assets/Orator-Std-Medium_34151.ttf#Orator Std">
                <TextBlock Margin="0,-4,0,0">enter</TextBlock>
            </Button>
        </Grid>
    </Border>
</UserControl>

