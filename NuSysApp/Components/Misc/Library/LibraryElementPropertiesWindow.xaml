<UserControl
    x:Class="NuSysApp.LibraryElementPropertiesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NuSysApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="500" Height="505">

    <Border x:Name="Border" Height="500" Width="400" Background="White" BorderBrush="#83A6A3" BorderThickness="1" Margin="3,0,0.333,0">

        <Grid Margin="-7,0,3,0">
            <Image Source="ms-appx:///Assets/icon_collapse.png" Tapped="CollapseArrow_OnTapped"  HorizontalAlignment="Right" Width="10" Margin="0,0,10,0"/>
            <StackPanel Padding="50" Orientation="Vertical" >
                <Border Height="150" Width="150" BorderThickness="1" BorderBrush="#E6EDEC">
                    <Image x:Name="Preview" Height="150" Width="150" Margin="0,0,0,0" />
                </Border>


                <!--<ListView.Header>
                        <Grid VerticalAlignment="Center" Background="#ECECEA ">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="125" />
                                <ColumnDefinition Width="125" />
                            </Grid.ColumnDefinitions>


                            <TextBlock HorizontalAlignment="Center" Grid.Column="0"  Text="Title" FontSize="18" />
                            <TextBlock HorizontalAlignment="Center" Grid.Column="1" Text="Node Type" FontSize="18" />
                            -->
                <!--<TextBlock Grid.Column="2" Text="Timestamp" />-->
                <!--



                        </Grid>
                    </ListView.Header>-->

                <Rectangle Height="30"></Rectangle>
                <Grid x:Name="PropertiesGrid" VerticalAlignment="Center" Padding="0" Margin="0" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                    </Grid.RowDefinitions>


                    <TextBlock  Grid.Column="0" Grid.Row="0" Text="Title" FontSize="16" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBox  x:Name="Title" TextChanged="OnTitleTextChanged" Grid.Column="1" Grid.Row="0" Text="--" FontSize="16" BorderThickness="0"  Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock  Grid.Column="0" Grid.Row="1" Text="Type" FontSize="16" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock  x:Name="Type" Grid.Column="1" Grid.Row="1" Text="--" FontSize="16" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock  Grid.Column="0" Grid.Row="2" Text="ID" FontSize="16" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock  x:Name="ID" Grid.Column="1" Grid.Row="2" Text="--" FontSize="16" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock  Grid.Column="0" Grid.Row="3" Text="Creator" FontSize="16" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock  x:Name="Creator" Grid.Column="1" Grid.Row="3" Text="--" FontSize="16" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock  Grid.Column="0" Grid.Row="4" Text="Last Edited" FontSize="16" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock  x:Name="LastEdited" Grid.Column="1" Grid.Row="4" Text="--" FontSize="16" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>
                    <TextBlock  Grid.Column="0" Grid.Row="5" Text="History" FontSize="16" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"/>
                    <TextBlock  x:Name="History" Grid.Column="1" Grid.Row="5" Text="--" FontSize="16" Foreground="Gray" FontFamily="ms-appx:/Assets/fonts/FiraSans-Light.ttf#Fira Sans Light"/>

                </Grid>
                <Rectangle Height="30"></Rectangle>
                <TextBlock Text="Aliases" Foreground="Black" FontFamily="ms-appx:/Assets/fonts/FiraSans-Book.ttf#Fira Sans Book"></TextBlock>
                <Rectangle Height="20"></Rectangle>
                <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <Grid x:Name="AliasGrid" >
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition ></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <Button Width="30" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10,10,10,10" Foreground="White" Background="Transparent"
                    Padding="0" Name="deleteButton" Click="Delete_OnClick">
                    <Image Source="ms-appx:///Assets/icon_delete_color.png" Height="30"></Image>
                </Button>
            </StackPanel>
            <Button Name="EnterCollectionButton" Padding="0" Visibility="Visible" Click="EnterCollection_OnClick" Width="30" Height="50" VerticalAlignment="Top" 
                        HorizontalAlignment="Center" Margin="10,10,10,10" Background="Transparent">
                <Image Source="ms-appx:///Assets/icon_delete_color.png" Height="30"></Image>
            </Button>
        </Grid>
    </Border>
</UserControl>

