<UserControl
    x:Class="NuSysApp.ChatBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NuSysApp.Components.Misc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Canvas x:Name="chatCanvas" Visibility="Collapsed">
            <StackPanel Orientation="Vertical">
                <TextBox x:Name="chatDisplayBox" Height="300" Width="300" IsReadOnly="True"/>
                <TextBox x:Name="chatInputBox" Height="75" Width="300" IsReadOnly="false" TextWrapping="Wrap"/>
            </StackPanel>
        </Canvas>
    </Grid>
</UserControl>
