        </StackPanel>
        <StackPanel x:Name="SubMenuPen" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,100,0,0" Opacity="0" IsHitTestVisible="False">
            <StackPanel.RenderTransform>
                <CompositeTransform/>
            </StackPanel.RenderTransform>
            <Button x:Name="Erase" Click="Erase_OnTapped" Style="{StaticResource FloatingButton}">
                <Image Height="40" Width="40" Source="ms-appx:///Assets/icon_eraser.png"></Image>
            </Button>
            <Button x:Name="Colors" Style="{StaticResource FloatingButton}"/>
        </StackPanel>
        <StackPanel x:Name="SubMenuSelect" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,0" Opacity="0" IsHitTestVisible="False">
            <StackPanel.RenderTransform>
                <CompositeTransform/> 
            </StackPanel.RenderTransform>
            <Button x:Name="MultiSelect" Style="{StaticResource FloatingButton}" Tapped="LinkButton_Click">
                <Image Height="50" Width="50" Source="ms-appx:///Assets/icon_multiselect.png"></Image>
            </Button>
        </StackPanel>
        <StackPanel x:Name="SubMenuNodes" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,200,0,0" Opacity="0" IsHitTestVisible="False">
            <StackPanel.RenderTransform>
                <CompositeTransform />
            </StackPanel.RenderTransform>
            <Button x:Name="NewNode" Style="{StaticResource FloatingButton}" Tapped="TextButton_Click">
                <Image Height="40" Width="40" Source="ms-appx:///Assets/icon_node.png" ></Image>
            </Button>
            <Button x:Name="NewMedia" Style="{StaticResource FloatingButton}" Tapped="DocumentButton_Click">
                <Image Height="40" Width="40" Source="ms-appx:///Assets/icon_media.png"></Image>
            </Button>
            <Button x:Name="NewImport" Style="{StaticResource FloatingButton}">
                <Image Height="40" Width="40" Source="ms-appx:///Assets/icon_bucket.png"></Image>
            </Button>
        </StackPanel>
        <StackPanel x:Name="SubMenuAdditional" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,300,0,0" Opacity="0" IsHitTestVisible="False">
            <StackPanel.RenderTransform>
                <CompositeTransform />
            </StackPanel.RenderTransform>
            <Button x:Name="Record" Style="{StaticResource FloatingButton}" Tapped="CortanaButton_Click">
                <Image Height="40" Width="40" Source="ms-appx:///Assets/icon_record.png"></Image>
            </Button>
            <Button x:Name="Export" Style="{StaticResource FloatingButton}" Tapped="SaveButton_Click">
