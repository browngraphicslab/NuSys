<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:NuSysApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:NuSysApp">
    <converters:SelectionToColorConverter x:Key="sConverter" />
    <converters:BoolToVisibilityConverter x:Key="vConverter" />
    <converters:EnumToBoolConverter x:Key="eConverter" />
    <Style TargetType="local:NodeTemplate">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NodeTemplate" >
                    <Grid x:Name="xContainer" Width="{Binding Width}" Height="{Binding Height}">
                        
                        <Grid x:Name="xTitleContainer" VerticalAlignment="Top" Width="{Binding Width}" >
                            <Border x:Name="Rect" CornerRadius="5,5,5,5" Background="#606d7a" BorderBrush="#606d7a" BorderThickness="2" Width="{Binding Width}"  />
                            <TextBox Padding="10,5,10,10" x:Name="xTitle" Foreground="White" Width="{Binding Width}"  IsHitTestVisible="{Binding IsSelected}" TextWrapping="Wrap"  AcceptsReturn="True"  Text="{Binding Title, Mode=TwoWay}" MaxHeight="80" FontSize="18" BorderBrush="Transparent" Background="Transparent" TextAlignment="Center" VerticalAlignment="Center" BorderThickness="0"></TextBox>
                            <Button x:Name="btnDelete" Visibility="Collapsed">X</Button>
                        </Grid>

                        <Grid Visibility="{Binding IsVisible, Converter={StaticResource vConverter}}" Name="bg" Background="{TemplateBinding Background}"
                                  IsHitTestVisible="{Binding CanEdit, Converter={StaticResource eConverter}}"  Width="{Binding Width}"  Height="{Binding Height}">

                            <Rectangle Height="{Binding Height}" Width="{Binding Width}" Margin="-2,-2"  />
                            <Canvas x:Name="SubMenu" RenderTransformOrigin="0.5,0.5" Background="Red" VerticalAlignment="Top" Margin="0,0,0,0" Visibility="{Binding IsSelected, Converter={StaticResource vConverter}}">
                                <Canvas.RenderTransform>
                                    <TranslateTransform X="-50"></TranslateTransform>
                                </Canvas.RenderTransform>
                                <ContentControl Content="{TemplateBinding SubMenu}" />
                            </Canvas>

                            <ContentControl Content="{TemplateBinding Inner}" x:Name="innerControl"  />

                            <Rectangle Height="{Binding Height}" Width="{Binding Width}" Stroke="Yellow" StrokeThickness="3" 
                           Visibility="{Binding IsSelected, ConverterParameter=false, Converter={StaticResource vConverter}}" />


                            <!-- TODO: Readd <local:InqCanvasView x:Name="inkCanvas" Height="{Binding 
                      RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DataContext.Height}" Width="{Binding  
                      RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DataContext.Width}" Background="Transparent" IsHitTestVisible="{Binding 
                      RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DataContext.IsEditingInk}" /> -->

          
                            <Path x:Name="Resizer" Fill="#606d7a" Data="M283,251 L283,283 L251,283 z" HorizontalAlignment="Right"
                      Height="59.862" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Bottom" Width="61"
                      Opacity=".35"  Canvas.ZIndex="20" ManipulationMode="All" />
                            <!--<TextBlock x:Name="Tags" VerticalAlignment="Bottom" FontSize="18" Text="{Binding Tags}"></TextBlock>-->
                            <ItemsControl x:Name="Tags" VerticalAlignment="Bottom" ItemsSource="{Binding Tags}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                        <Canvas>
                        <Border x:Name="xHighlight" Width="{Binding Width}" BorderThickness="4" CornerRadius="5,5,0,0" />
                        </Canvas>
                        <Canvas>
                            <TextBlock x:Name="xUserName"  Text="" Margin="0,-67.5,0,0" FontSize="22.5"></TextBlock>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

   
</ResourceDictionary>
